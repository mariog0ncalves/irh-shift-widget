{
  "manifest_version": 2,
  "name": "iRH Shift Widget",
  "version": "1.0",
  "description": "Personal Firefox extension",
  "permissions": [],
  "icons": {
    "16": "icons/ico.png",
    "32": "icons/ico.png",
    "48": "icons/ico.png",
    "128": "icons/ico.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/ico.png",
      "32": "icons/ico.png",
      "48": "icons/ico.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://irh.pt/picagens/picagens_c"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "applications": {
    "gecko": {
      "id": "irh-counter@acin.pt"
    }
  }
}
